<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blankbackground"
    tools:context="layout.AddNewWord">


    <Spinner
        android:id="@+id/category_spinner"
        style="@style/MyButtonStyle"
        android:layout_width="250dp"
        android:layout_above="@+id/word_to_add"
        android:layout_marginBottom="45dp"
        android:background="@drawable/backtextbox"
        android:foreground="#000"
        android:popupBackground="#fff"
        android:hint="Choose category" />

    <EditText
        android:id="@+id/word_to_add"
        style="@style/MyButtonStyle"
        android:layout_width="250dp"
        android:layout_centerVertical="true"
        android:background="@drawable/backtextbox"
        android:gravity="center"
        android:hint="Enter new word"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textColorHint="@color/black_overlay" />

    <Button
        android:id="@+id/add_new_word_btn"
        style="@style/MyButtonStyle"
        android:layout_width="250dp"
        android:layout_alignLeft="@+id/word_to_add"
        android:layout_alignStart="@+id/word_to_add"
        android:layout_below="@+id/word_to_add"
        android:layout_marginTop="45dp"
        android:text="Add word" />

</RelativeLayout>
